<%- include("partials/header") %>

<div class="ui container main" >
	<% blog.forEach(function(blog){%>
		<div class="ui top attached segment" >

		<div class="image"> 
				<img src="<%= blog.image %>">
		</div>
				<div class="content">
				<a class="header" href="/blogs/<%= blog._id %>"><h2>			
					<%=blog.title%></h2></a>
		</div>
			<span><%=blog.created.toDateString()%></span>
					<div class="descreption">
				<h4><%=blog.body.substring(0, 100)%>...</h4>
				</div>
				<a class="ui blue floated inverted button" href="/blogs/<%= blog._id %> " > Read More <i class="right chevron  icon" ></i></a>
</div>	
		<% }) %>
</div>
		
<%- include("partials/footer") %>
